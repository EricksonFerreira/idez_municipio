<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Redireciona para o frontend
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
    
    # Redireciona requisições da API
    RewriteRule ^api/(.*)$ public/index.php [L]
</IfModule>
